<script>
/* Enhanced Checkout UX */
document.addEventListener('DOMContentLoaded', function() {
    // Add payment method section header if it doesn't exist
    const paymentDiv = document.getElementById('payment');
    if (paymentDiv && !paymentDiv.querySelector('.section-title')) {
        const sectionTitle = document.createElement('h3');
        sectionTitle.className = 'section-title';
        sectionTitle.textContent = 'Metoda pÅ‚atnoÅ›ci';
        
        const formSection = document.createElement('div');
        formSection.className = 'form-section';
        
        // Move payment content into form-section
        const paymentMethods = paymentDiv.querySelector('.payment_methods');
        const termsWrapper = paymentDiv.querySelector('.woocommerce-terms-and-conditions-wrapper');
        const placeOrderButton = paymentDiv.querySelector('#place_order');
        
        if (paymentMethods) {
            formSection.appendChild(sectionTitle);
            formSection.appendChild(paymentMethods);
            if (termsWrapper) formSection.appendChild(termsWrapper);
            if (placeOrderButton) formSection.appendChild(placeOrderButton);
            
            // Clear payment div and add form section
            paymentDiv.innerHTML = '';
            paymentDiv.appendChild(formSection);
        }
    }
    
    // Enhanced payment method interaction
    const paymentMethods = document.querySelectorAll('.payment_methods li');
    paymentMethods.forEach(method => {
        const radio = method.querySelector('input[type="radio"]');
        if (radio) {
            method.addEventListener('click', function(e) {
                if (e.target !== radio) {
                    radio.checked = true;
                    radio.dispatchEvent(new Event('change'));
                }
                
                // Remove selected class from all methods
                paymentMethods.forEach(m => m.classList.remove('wc_payment_method_selected'));
                // Add selected class to current method
                method.classList.add('wc_payment_method_selected');
            });
            
            // Set initial selected state
            if (radio.checked) {
                method.classList.add('wc_payment_method_selected');
            }
            
            radio.addEventListener('change', function() {
                paymentMethods.forEach(m => m.classList.remove('wc_payment_method_selected'));
                if (this.checked) {
                    method.classList.add('wc_payment_method_selected');
                }
            });
        }
    });
    
    // Enhanced form validation feedback
    const formFields = document.querySelectorAll('.form-row input, .form-row select, .form-row textarea');
    formFields.forEach(field => {
        field.addEventListener('blur', function() {
            const formRow = this.closest('.form-row');
            if (this.value.trim()) {
                formRow.classList.add('woocommerce-validated');
                formRow.classList.remove('woocommerce-invalid');
            }
        });
        
        field.addEventListener('focus', function() {
            const formRow = this.closest('.form-row');
            formRow.classList.remove('woocommerce-invalid');
        });
    });
    
    // Smooth scroll to errors
    document.body.addEventListener('checkout_error', function() {
        const firstError = document.querySelector('.woocommerce-invalid input, .woocommerce-error');
        if (firstError) {
            firstError.scrollIntoView({ behavior: 'smooth', block: 'center' });
            firstError.focus();
        }
    });
    
    // Loading state for place order button
    const checkoutForm = document.querySelector('form.checkout');
    if (checkoutForm) {
        checkoutForm.addEventListener('submit', function() {
            const placeOrderBtn = document.getElementById('place_order');
            if (placeOrderBtn) {
                placeOrderBtn.style.opacity = '0.7';
                placeOrderBtn.style.cursor = 'not-allowed';
                placeOrderBtn.innerHTML = '<div style="width: 1rem; height: 1rem; border: 2px solid #fff; border-top: 2px solid transparent; border-radius: 50%; animation: spin 1s linear infinite; margin-right: 0.5rem;"></div>Przetwarzanie...';
            }
        });
    }
});

/* Spin animation for loading */
const style = document.createElement('style');
style.textContent = `
@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}
`;
document.head.appendChild(style);
</script>

